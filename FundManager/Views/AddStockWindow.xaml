<Window x:Class="FundManager.Views.AddStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="AddStockWindow" Height="235" Width="322" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
  <Grid>
    <Button x:Name="AddBtn" Content="Add" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="40" VerticalAlignment="Bottom" Click="AddBtnClick" IsDefault="True"/>
    <Button x:Name="CancelBtn" Content="Cancel" Margin="0,0,90,10" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="CancelBtnClick" IsCancel="True"/>
    <Label Content="Price:" HorizontalAlignment="Left" Margin="36,46,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.079,0"/>
    <Label Content="Quantity:" HorizontalAlignment="Left" Margin="16,100,0,0" VerticalAlignment="Top"/>
    <xctk:IntegerUpDown x:Name="QuantityIntegerUpDown" Value="1" Margin="101,100,71,71" Maximum="1000000000" Minimum="1"/>
    <xctk:DecimalUpDown x:Name="PriceDecimalUpDown" Value="1.00" Margin="101,46,71,125" Maximum="1000000000.00" Minimum="0.01"/>
  </Grid>
</Window>
